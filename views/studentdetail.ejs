<%- include('./base/header.ejs') %>

<div class="container">
    <div class="row">
        <table class="table text-center">
            <tr>
            <thead>
                <th>Roll No</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Father Name</th>
                <th>Aadhar Card No.</th>
                <th>mobile No.</th>
                <th>Actions</th>
            </thead>
        </tr>
        <% students.forEach(student => { %>
            <tr>
                <td><%=student.rollno %></td> 
                <td><%=student.firstName %></td> 
                <td><%=student.lastName %></td> 
                <td><%=student.fatherName %></td> 
                <td><%=student.aadharCardNo %></td> 
                <td><%=student.mobileNo %></td> 
                <td>
                    <a href="/student/edit/page/<%= student._id %>" class="btn btn-warning w-40">Edit</a>
                    <a href="/student/delete/<%= student._id %>" class="btn btn-danger w-40">Delete</a>
                </td> 
            </tr>
         
        <% }) %>
        </table>
    </div>
</div>
<%- include('./base/footer.ejs') %>
